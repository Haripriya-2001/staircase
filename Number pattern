#include<stdio.h>
int main()
{
     int i,j,remainder,n;
     printf("enter number of rows:");
     scanf("%d", &n);
     for(i=0;i<=n;++i)
     {
          for(j=0;j<=i;++j)
          {
               remainder=j%2;
               printf("%d", remainder);
          }
          printf("\n");
     }
     return 0;
}
